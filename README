# 執行
cd /home/eric/code/exercise/backend

source venv/bin/activate && python3 manage.py runserver 8001

source venv/bin/activate && python3 manage.py shell

source backend/venv/bin/activate && export DJANGO_SETTINGS_MODULE=job_platform.settings && python3 -m pytest backend/jobs/tests.py -v
